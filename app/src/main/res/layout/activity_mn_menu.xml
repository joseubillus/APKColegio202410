<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MnMenu">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/FrmMenu_VPantalla"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/FrmMenu_TabMenu" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/FrmMenu_TabMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/FrmMenu_tabInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/FrmMenu_tabasis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asistencia" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/FrmMenu_tabusu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuarios" />

    </com.google.android.material.tabs.TabLayout>
</RelativeLayout>