<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.FragmeTabUsuario">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/FrmTabUsu_LstData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/FrmTabUsu_LineaLayout"
            tools:listitem="@layout/conf_lchat" />

        <LinearLayout
            android:id="@+id/FrmTabUsu_LineaLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/FrmTabUsu_txtmen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:ems="10"
                android:hint="Mensaje"
                android:inputType="text" />

            <Button
                android:id="@+id/FrmTabUsu_btnenv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enviar" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>